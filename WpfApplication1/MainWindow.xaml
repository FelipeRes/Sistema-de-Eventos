<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label x:Name="label" Content="Dashboard" Height="34" FontSize="20" Background="#FFBECAFF" HorizontalAlignment="Center" UseLayoutRounding="False" RenderTransformOrigin="0.5,0.5" VerticalAlignment="Top" Margin="0,0,10,0" Width="507">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1" ScaleX="1"/>
                    <SkewTransform AngleY="0" AngleX="0"/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform X="10"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Button x:Name="button" Content="Criar Evento" HorizontalAlignment="Left" Margin="43,131,0,0" VerticalAlignment="Top" Width="153" Height="80" Click="button_Click"/>
        <Button x:Name="button_Copy" Content="Consultar Evento" HorizontalAlignment="Left" Margin="314,131,0,0" VerticalAlignment="Top" Width="153" Height="80"/>

    </Grid>
</Window>
